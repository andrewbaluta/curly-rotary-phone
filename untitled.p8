pico-8 cartridge // http://www.pico-8.com
version 39
__lua__
function _init()
 sfx(0)
 player={
    x=63,
    y=63
 }
 ypos=63
 cls()
 bound=0
end


function _update()
	
	bound=0	
-- player movement
	if btn(➡️) then
		player.x+=2
	end
	if btn(⬅️) then
		player.x-=2
	end
	if btn(⬆️) then
		player.y-=2
	end
	if btn(⬇️) then
		player.y+=2
	end
	
-- player boumding
	if player.x<0 then
		player.x = 0
		bound=1
	end
	if player.y<0 then
		player.y = 0
		bound=1
	end
	if player.x>120 then
		player.x = 120
		bound=1
	end
	if player.y>120 then
		player.y = 120
		bound=1
	end
end

function _draw()
	cls(1)
	spr(1,player.x,player.y)
	if bound==1 then
		sfx(1)
	end
end
