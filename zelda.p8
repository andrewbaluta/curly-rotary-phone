function init_ani()
	ani_speed=5
	timer=0
	ani_down={
		sprite=0,
		first=0,
		last=2
	}
	ani_up={
		sprite=8,
		first=8,
		last=10
	}
	ani_side={
		sprite=4,
		first=4,
		last=6
	}
