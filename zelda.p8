function _update()
	ani_nerd()

	-- player movement
	if btn(⬅️) then
		player.x-=player.speed
		player.fx=false
	end
	if btn(⬆️) then
		player.y-=player.speed
		player.fx=false
	end
	if btn(⬇️) then
		player.y+=player.speed
		player.fx=false
